{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@crests": ["./public/crests/*"],
      "@components/*": ["./src/components/*"],
      "@glowing_crests/*": ["./public/glowing_crests/*"],
      "@logo.png": ["./public/hogwarts-logo.png"],
      "@public/*": ["./public/*"],
      "@provider/*": ["./src/providers/*"],
      "@utils/*": ["./src/utils/*"],
      "@service/*": ["./src/service/*"],
      "types.d": ["./types.d.ts"]
    }
  },
  "include": [
    "types.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
